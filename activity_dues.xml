<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar with Back button and Title -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0071BC"
        app:title="STI"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@android:drawable/ic_media_previous"
        app:titleCentered="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints" />

    <!-- Placeholder Content -->
    <TextView
        android:id="@+id/txtDues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have no dues!"
        android:textSize="20sp"
        android:textColor="#333"
        app:layout_constraintTop_toBottomOf="@id/toolbarDues"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
