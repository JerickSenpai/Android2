<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDues"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DuesActivity">

    <!-- Toolbar with Back button and Title -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0071BC"
        app:title="STI"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@android:drawable/ic_media_previous"
        app:titleCentered="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints" />

    <!-- Dues List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDues"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:listitem="@layout/item_due" />

</LinearLayout>
