<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.libraryapp">

    <!-- Define Permissions -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" /> <!-- For QR scanning -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- If you connect to a server for database -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- For network checks -->

    <!-- Application level configurations -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Main Activity - Launches when app starts -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Dashboard Activity -->
        <activity
            android:name=".DashboardActivity"
            android:label="Dashboard"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Due Activity -->
        <activity
            android:name=".DuesActivity"
            android:label="Due"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- History Activity -->
        <activity
            android:name=".HistoryActivity"
            android:label="History"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Scan QR Activity -->
        <activity
            android:name=".ScanQRActivity"
            android:label="Scan QR"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Attendance Record Activity -->
        <activity
            android:name=".AttendanceRecordActivity"
            android:label="Attendance Record"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

    </application>

</manifest>
